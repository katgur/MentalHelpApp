<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.answer.AnswerFragment"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer_edit_btn"
            style="@style/ButtonDefault"
            android:text="Редактировать" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/answer_delete_btn"
            android:text="Удалить"
            style="@style/ButtonDefault"/>

    </LinearLayout>

    <TextView
        android:id="@+id/answer_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="date"
        android:layout_margin="100dp"
        android:textSize="30sp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/answer_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_view_corner_radius"
        android:layout_centerInParent="true"
        android:outlineAmbientShadowColor="@color/secondaryLightColor"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/answer_text"
            style="@style/TextViewDefault"
            android:layout_width="@dimen/main_text_layout_width"/>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>